---
interface Props {
    title?: string;
}

const { title = "Alli's Portfolio" } = Astro.props;
---

<!doctype html>
<html lang="en" class="bg-zinc-900 text-white m-0 scroll-smooth snap-both snap-mandatory overflow-y-scroll h-full">
    <head>
        <meta charset="UTF-8" />
        <meta name="description" content="Astro description" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>
    </head>
    <body class="bg-zinc-900 text-white m-0 h-full">
        <slot />
    </body>
</html>
<style is:global>
    html {
        font-family: system-ui, sans-serif;
    }

    code {
        font-family:
            Menlo,
            Monaco,
            Lucida Console,
            Liberation Mono,
            DejaVu Sans Mono,
            Bitstream Vera Sans Mono,
            Courier New,
            monospace;
    }

    .visible {
        display: inline-flex !important;
    }

    body:has(.visible) #content {
        display: none;
    }

    [data-invisible='true'] {
        display: none;
    }
</style>
